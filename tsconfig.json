{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // Often helpful with NodeNext
    "resolveJsonModule": true, // Good practice for importing JSON if needed
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "tck/**/*.ts"]
}
